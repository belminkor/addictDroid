<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Relapse"
    android:gravity="center"
    android:background="@drawable/background3"
    android:orientation="vertical">

    <TextView
        android:text="@string/relapse1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/reasons_why"
        android:background="@drawable/edit_text"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textColor="#4b24a5"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:text="@string/relapse2"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/reasons_why_not"
        android:gravity="center"
        android:background="@drawable/edit_text"
        android:padding="5dp"
        android:textColor="#4b24a5"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/current_date"
        android:text=""
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:text="Save"
        android:onClick="onClickSaveRelapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4b24a5"
        android:textColor="#fff"/>

</LinearLayout>