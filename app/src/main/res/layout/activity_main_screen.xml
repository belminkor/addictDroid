<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    tools:context=".MainScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day_count"
            android:layout_width="200dp"
            android:layout_height="197dp"
            android:background="@drawable/gradient_list"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="1\n  Day  "
            android:textSize="50dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/daily_motivation_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#4b24a5"
            android:text="Daily motivation"
            android:textColor="#fff" />


        <Button
            android:id="@+id/relapse_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#4b24a5"
            android:text="Relapse"
            android:textColor="#fff" />

        <Button
            android:id="@+id/my_goals_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#4b24a5"
            android:text="My Goals"
            android:textColor="#fff" />

        <ImageButton
            android:id="@+id/phone_calls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/phone"
            android:clickable="true" />


    </LinearLayout>



</LinearLayout>
