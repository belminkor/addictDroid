<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background3"
    tools:context=".EmergencyCalls">

    <Button
        android:id="@+id/choose_contact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4b24a5"
        android:text="Choose Contact"
        android:textColor="#fff" />

    <ImageButton
        android:id="@+id/friend_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/button_call"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4b24a5"
        android:text="Call"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/neki_tekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Other important numbers"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageButton
            android:id="@+id/ambulance_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hospital"
            android:layout_margin="20dp"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/police_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/police"
            android:layout_margin="20dp"
            android:clickable="true"/>
    </LinearLayout>


</LinearLayout>